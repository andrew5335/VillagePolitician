<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CongressmanListActivity">
        
        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/coordinator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" >

                <android.support.design.widget.AppBarLayout
                    android:id="@+id/appBarLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <android.support.v7.widget.Toolbar
                            android:id="@+id/congressmanToolBar"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_gravity="center_horizontal|center_vertical|center"
                            android:gravity="center_horizontal|center_vertical|center"
                            app:layout_scrollFlags="scroll|enterAlways"
                            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

                </android.support.design.widget.AppBarLayout>

                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    android:background="#fff"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_weight="3"
                                    android:background="#fff"
                                    android:gravity="left|center_horizontal|center_vertical">

                                    <Spinner
                                        android:id="@+id/congressman_list_spinner"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:theme="@android:style/Theme.Holo.Light.DarkActionBar" />

                                </RelativeLayout>

                                <EditText
                                    android:id="@+id/searchTxt"
                                    style="@style/Widget.AppCompat.EditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="2dp"
                                    android:layout_weight="2"
                                    android:background="@null"
                                    android:ems="10"
                                    android:gravity="center_vertical"
                                    android:hint="검색어 입력"
                                    android:textColorHint="@color/browser_actions_bg_grey"
                                    android:onClick="onSearchTxtClicked"
                                    android:paddingLeft="2dp"
                                    android:textColor="#000" />

                                <Button
                                    android:id="@+id/searchBtn"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_weight="3"
                                    android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                                    android:text="검색"
                                    android:textColor="#000"
                                    android:onClick="onSearchBtnClicked"/>

                            </LinearLayout>

                            <ListView
                                android:id="@+id/congressmanListView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:nestedScrollingEnabled="true"
                                android:background="#fff" />

                        </LinearLayout>

                </android.support.v4.widget.NestedScrollView>

                <android.support.design.widget.BottomNavigationView
                    android:id="@+id/congressmanBottomView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="#fff"
                    app:menu="@menu/bottom_menu"
                    app:layout_behavior="politics.andrew.com.villagepolitician.helper.BottomNavigationBehavior"
                    app:layout_scrollFlags="scroll|enterAlways" />

        </android.support.design.widget.CoordinatorLayout>

        <ProgressBar
            android:id="@+id/congressman_list_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>